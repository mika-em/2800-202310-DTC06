<!-- Purpose: Login Screen for Invsona -->

<!-- header -->
<%-include ('../partials/header.ejs')%>

<!-- content -->
<!-- video background -->
<video autoplay muted loop id="background">
  <source src="./images/blue_bg.mp4" type="video/mp4" />
</video>

<!-- logo -->
<div class="container-fluid" id="login">
  <div id="box">
    <img id="logo" src="../images/invsona/invsona.png" alt="invsona logo" />
    <h1 class="pt-3" id="title">Invsona</h1>
    <div class="container mb-5">
      <p id="slogan">Character Creation at Your Finger Tips</p>
    </div>
  

    <!-- FORM -->
    <div class="container text-start">
      <form action="/loginUser" method="post">
        <div class="mb-3">
          <label for="loginName" class="form-label">Username / Email</label>
          <input
            type="loginName"
            class="form-control"
            id="loginName"
            name="loginName"
            aria-describedby="emailHelp"
          />
          <div id="emailHelp" class="form-text">
            We'll never share your email with anyone else.
          </div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
          />
        </div>

        <!-- FORGET PASSWORD -->
        <div id="resetPassword" class="form-text">
          <a href="/resetPassword">Forgot password</a>
        </div>

        <div class="p-4 text-center">
          <button type="submit" class="btn btn-primary">LOGIN</button>
        </div>

        <!-- SIGN UP -->
        <div>
          <p class="text-center">
            Don't have an account? <a href="/signup">SIGN UP</a>
          </p>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- footer -->
<%-include ('../partials/footer.ejs')%>
