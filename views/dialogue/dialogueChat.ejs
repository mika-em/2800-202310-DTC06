<!-- header -->
<%-include ("../partials/header-persona.ejs")%>
<%-include ("../partials/emptybackbar.ejs") %>

<h1>This is the dialogue generator</h1>

<div class="container" id="chatContainer" id="chatContainer">
  <!-- Existing chat messages -->
  <div class="row">
    <% for (var i=0; i<innerDialogueHistory.length; i++) { %>
    <div class="col-12" id="userInput">
      <%- "User:" + "&nbsp;" + innerDialogueHistory[i].userPrompt %>
    </div>
    <div class="col-12" id="botOutput">
      <%- "Bot:" + "&nbsp;" + innerDialogueHistory[i].botResponse %>
    </div>
    <% } %>
  </div>
</div>

<form action="/dialogue/chat" method="post" class="text-center input-container">
  <div class="row">
    <input class="form-control col" rows="1" cols="1" type="text" name="prompt" placeholder="<%= placeholderText %>" />
    <button class="btn col-3" type="submit">Send</button>
  </div>
</form>

