<!-- GENERAL CONTENT -->
<!-- header and back header -->
<%-include ("../partials/header-dialogue.ejs")%>
<%- include ("../partials/emptybackbar.ejs") %>

<!-- title -->
<div class="col text-center">
    <h1>Create an inner dialogue.</h1>
    <p style="font-size: 12px;">Have you ever wondered what a persona could be thinking?</p>
</div>
</div>

<!-- content -->
<div class="container-fluid" id="inputContainer" style="padding-top: 30px; padding-left: 10px; padding-right: 10px;">
  <div class="row">
    <form action="/dialogue/chat/inner-dialogue" method="post" class="text-center">
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body mx-1">
            <label class="card-title">Enter a persona</label><br />
            <input class="form-control" type="text" name="persona" placeholder="Enter a persona description" />
          </div>
        </div>
      </div>

      <div class="col-12">
        <div class="card text-center">
          <div class="card-body mx-1">
            <label class="card-title">What situation is the persona faced with?</label><br />
            <input class="form-control" type="text" name="situation" placeholder="Enter the situation your persona is in" />
          </div>
        </div>
      </div>

      <div class="col-12">
        <div class="card text-center">
          <div class="card-body mx-1">
            <label class="card-title">What kind of setting are they in?</label><br />
            <input class="form-control" type="text" name="setting" placeholder="Enter the setting your persona is in" />
          </div>
        </div>
      </div>

      <button class="btn mt-2" type="submit" id="send">Send</button>
    </form>
  </div>
</div>

<div class="px-5 text-center d-none" id="loadingCard" style="padding-top: 200px;">
  <span id="loadingContainer"><i class="fa-solid fa-cat fa-bounce fa-2xl" style="color: #ffffff;"></i></i></span>
  <p style="color: #ffffff;">Please watch this cat while we finish generating!</p>
</div>

<script>
  $(document).ready(function() {
    $('#send').click(function() {
      // show card with loading indicator
      $("#loadingCard").removeClass("d-none");
      $("#inputContainer").addClass("d-none");
    });
  });
</script>

<!-- navbar and footer -->
<%-include ("../partials/navbar.ejs")%>
<%-include ("../partials/footer.ejs")%>