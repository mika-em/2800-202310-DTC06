<!-- GENERAL CONTENT -->
<!-- header and back header -->
<%-include ("../partials/header-persona.ejs")%>
<%-include ("../partials/emptybackbar.ejs") %>

<!-- title -->
<div class="col text-center">
  <h1>GENERAL PROMPT</h1>
</div>
</div> 
</div>

<!-- content -->
<div class="container-fluid" style="padding-top: 150px;">
  <div class="row">
    <form action="/persona/chat" method="post" class="text-center">
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <label class="card-title">Name</label><br />
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="Enter name"
            />
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <label class="card-title">Age</label><br />
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="Enter age"
            />
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <label class="card-title">Gender</label><br />
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="Enter gender"
            />
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <label class="card-title">Situation</label><br />
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="Enter the situation your persona is in"
            />
          </div>
        </div>
      </div>
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <label class="card-title">Plot/Setting</label><br />
            <input
              class="form-control"
              type="text"
              name="name"
              placeholder="Enter the plot/setting your persona is in"
            />
          </div>
        </div>
      </div>
      <br />
      <button class="btn" type="submit">Send</button>
    </form>
  </div>
</div>

<!-- navbar and footer -->
<%-include ("../partials/navbar.ejs")%>
<%-include ("../partials/footer.ejs")%>