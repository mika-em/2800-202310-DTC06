<!-- NEW PROMPT PAGE -->
<!-- header and back bar -->
<%-include ("../partials/header-persona.ejs")%>
<%-include ("../partials/emptybackbar.ejs")%>

<div class="col text-center">
  <h1>NEW PROMPT</h1>
</div>
</div> 
</div> 
</div>

<!-- content -->

<div class="container-fluid" style="padding-top: 200px;">
  <form action="/persona/new-prompt" method="post">
    <div class="row">
      <input class="form-control col mx-3" type="text" name="parameter" placeholder="Add a parameter" />
      <button class="btn col-3 mx-3" type="submit">Add</button>
    </div>
  </form>
  <br>

  <form action="/persona/chat" method="post" class="text-center">
    <div class="row">
      <% for (var i=0; i<locals.savedPromptParameter.length; i++) { %>
      <div class="col-12">
        <div class="card text-center">
          <div class="card-body">
            <label class="card-title"><%- newParameter[i] %></label><br>
            <i class="material-icons position-absolute top-0 end-0 m-3 delete-icon" data-index="<%- i %>">delete_outlined</i>
            <input class="form-control" type="text" name="<%- newParameter[i] %>" placeholder="Enter <%- newParameter[i] %>" />
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <br>
    <button class="btn" type="submit">Send</button>
  </form>
</div>
<br>

<!-- navbar and footer -->
<%-include ("../partials/navbar.ejs")%>
<%-include ("../partials/footer.ejs")%>