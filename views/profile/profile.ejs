<!-- Profile information -->
<!-- header -->
<%-include ('../partials/header-internal.ejs')%>

<div class="container-fluid">
      <div class="container text-center align-item-center pt-5" id="decor_user">
        <div class="py-5">
          <form action="upload.png" method="post" enctype="multipart/form-data">
            <label for="fileToUpload">
              <div
                class="editUserImage"
                style="background-image: url('../images/cat_placeholder.png')"
              >
  
                <span>Edit Profile Picture</span>
                <div style="position: relative">
                  <img src="../images/icons/edit.png" class="editicon" alt="">
                </div>
              </div>
            </label>
            <input type="File" name="fileToUpload" id="fileToUpload">
          </form>
        </div>
      </div>

  
      <!-- Menu -->
      <div class="container px-3">

        <!-- Account Settings -->
        <div class="card p-3 bg-secondary btn">
